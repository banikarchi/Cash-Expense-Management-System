    <% @budgetplaners.each do |budgetplaner| %>
      <%= render budgetplaner %>
      <p>
      <%= link_to "Show this budgetplaner", budgetplaner %>
      </p>
    <% end %>
  <%else%>
    <% @budgetplanerz.each do |budgetplaner| %>
      <%= render budgetplaner %>
      <p>
      <%= link_to "Show this budgetplaner", budgetplaner %>
      </p>
    <% end %>
  <%end%>

</div>

