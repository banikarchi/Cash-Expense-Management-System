<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Category, style: "display: block" %>
    <%= form.text_field :cgory %>
  </div>

  <div>
    <%= form.label :Subcategory, style: "display: block" %>
    <%= form.text_field :scgory %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%if current_user.is_admin==true %>
    <%= form.label :approval, style: "display: block" %>
    <%= form.check_box :approval %>
    <% end %>
  </div>
  <div>
  <%if current_user.is_admin==true%>
    <%= form.number_field :user_id%>     
    
  <%else%>
    <%= form.number_field :user_id ,value: current_user.id, type: :hidden%>
      
  <% end %>  
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
